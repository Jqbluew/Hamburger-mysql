<div class="container">

        <div class="jumbotron text-center">
            <h1>Devour Your Burger</h1>
        </div>


	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<h1>Let's Have Some Burgers</h1>
		</div>
		<div class="col-xs-4 text-center" class="task">
			<div class="row">
				{{#each burger_data}}
					{{#unless this.devoured}}
				
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.burger_name}}</pre>					
				</div>
				
				<div class="col-xs-3 text-center">
					<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
						<input type="hidden" name="burger_id" type="text" value={{this.id}}>
						<br>
						<button type="submit" class="btnDevour">DEVOUR THE BURGER!</button>
					</form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center" class="task">
			{{#each burger_data}}
				{{#if this.devoured}}
					<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
				{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-9 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
				<button type="submit" class="btnCreate" id="text-enter-button">Eat This One</button>
			</form>
			<p>Enter Your Favorite Burger.</p>
		</div>
	</div>
</div>